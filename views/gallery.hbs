<div class="gallery">
    {{#if loggedIn}}
    <h1>Welcome Back {{username}}!</h1>
    <a href="/logout"><button>Logout</button></a>
    <a href="/new"><button>New Post</button></a>
    {{else}}
    <h1>Express-Gallery</h1>
    <a href="/login"><button class='login'>Login</button></a>
    <a href="/register"><button class="register">Register</button></a>
    {{/if}}
    {{#each gallery}}
    <div class="image">
        <p class="user">Uploaded by User: {{user.username}}</p>
        <p class="description">Description: {{description}}</p>
        <a href="/gallery/{{id}}">
            <img class='picture' src="{{url}}" alt="" width='700px' height="auto">
        </a>
    </div>
    {{/each}}
</div>